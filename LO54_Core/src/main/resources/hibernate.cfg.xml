<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/LO54</property>
    <property name="hibernate.connection.username">bibi</property>
    <property name="hibernate.connection.password">bibi</property>
    <property name="hibernate.default_schema">LO54</property>
    <property name="hibernate.hbm2ddl.auto">validate</property>
    <mapping resource="Course.hbm.xml"/>
    <mapping resource="Client.hbm.xml"/>
    <mapping resource="Location.hbm.xml"/>
    <mapping resource="CourseSession.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
